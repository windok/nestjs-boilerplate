{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts",
            ".response.ts",
            ".request.ts"
          ]
        }
      }
    ],
    "webpack": false
  }
}
